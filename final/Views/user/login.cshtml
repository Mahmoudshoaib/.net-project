@model final.Models.user
@{
    ViewBag.Title = "login";
}
@section style{
    <link href="~/Content/form.css" rel="stylesheet" />
}
<main>
    <form method="post">
        <h3>Login</h3>
        <div>
            <label for="email" class="form-label">Email</label>
            @Html.TextBoxFor(n => n.email, new { @class = "form-control", @id = "email" })
            <div>@Html.ValidationMessageFor(n => n.email, null, new { @class = "text-danger" })</div>
        </div>
        <div>
            <label for="pass" class="form-label">Password</label>
            @Html.PasswordFor(n => n.password, new { @class = "form-control", @id = "pass" })
            <div>@Html.ValidationMessageFor(n => n.password, null, new { @class = "text-danger" })</div>
        </div>
        <div class="text-danger" style="text-align: center; font-weight: 600">@ViewBag.message</div>
        <input type="submit" value="Login" class="btn btn-primary" />
    </form>
</main>
@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
